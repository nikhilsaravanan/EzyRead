{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "EzyRead",
  "version": "3.0",
  "description": "Revolutionizing Accessibility. Making reading and research easier for all",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "src/pages/popup.html",
    "default_icon": {
      "16": "assets/images/icon.png",
      "48": "assets/images/icon.png",
      "128": "assets/images/icon.png"
    }
  },
  "icons": {
    "16": "assets/images/icon.png",
    "48": "assets/images/icon.png",
    "128": "assets/images/icon.png"
  },
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/scripts/contentScript.js", "src/scripts/dist/ocrScript.bundle.js"]
    },
    {
      "matches": ["*://*/*.html*", "*://*/news/*", "*://*/2024/*", "*://*/politics/*"],
      "js": ["src/scripts/contentScript4.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["node_modules/tesseract.js/dist/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
